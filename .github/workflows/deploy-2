name: Deploy to GitHub Pages

on:
  # mainブランチにプッシュされたときに実行されます
  push:
    branches: [ main ]
  # GitHubのUIからも手動で実行できるようにします
  workflow_dispatch:

# JOBSを許可する権限を設定
permissions:
  contents: read
  pages: write
  id-token: write
  actions: read

# 並行して実行されるdeployment間の衝突を避ける
concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v3
      - name: Setup Node
        uses: actions/setup-node@v3
        with:
          node-version: "20"
          cache: 'npm'
      - name: Setup Pages
        uses: actions/configure-pages@v3
        id: pages
      - name: Create npm config
        run: |
          echo "Creating npm config to resolve dependencies"
          cat > .npmrc << EOF
          # パッケージのバージョン競合を解決するための設定
          # legacy-peer-depsよりも推奨される方法
          strict-peer-dependencies=false
          EOF
      - name: Update package.json with overrides
        run: |
          if [ -f package.json ]; then
            # package.jsonに競合解決のためのoverridesを追加
            node -e "
              const fs = require('fs');
              const pkg = JSON.parse(fs.readFileSync('./package.json', 'utf8'));
              if (!pkg.overrides) pkg.overrides = {};
              // @julr/unocss-preset-formsとunocssの競合を解決
              pkg.overrides['unocss'] = '^66.0.0';
              fs.writeFileSync('./package.json', JSON.stringify(pkg, null, 2));
            "
            echo "Updated package.json with overrides"
          fi
      - name: Install dependencies
        run: npm ci
      - name: Build with Astro
        run: npm run build
      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: github-pages
          path: ./dist
          if-no-files-found: error

  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    needs: build
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v3 
